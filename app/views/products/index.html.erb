<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Unity</th>
      <th>Description</th>
      <th>Identification</th>
      <th>Cost</th>
      <th>Selling price 1</th>
      <th>Observations</th>
      <th>Provider</th>
      <th>Inventory</th>
      <th>Barcode</th>
      <th>Selling price 2</th>
      <th>Selling price 3</th>
      <th>Min stock</th>
      <th>Max stock</th>
      <th>Stock purchase</th>
      <th>Factor pcs of sales</th>
      <th>Ncm</th>
      <th>Brand</th>
      <th>Weight</th>
      <th>Size</th>
      <th>Inactive</th>
      <th>Kind</th>
      <th>Composition</th>
      <th>Feedstock</th>
      <th>Material imprint</th>
      <th>For sale</th>
      <th>Coin</th>
      <th>Code</th>
      <th>Comments</th>
      <th>Provider</th>
      <th>Ncm code</th>
      <th>Pip</th>
      <th>Gender</th>
      <th>Value</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category %></td>
        <td><%= product.unity %></td>
        <td><%= product.description %></td>
        <td><%= product.identification %></td>
        <td><%= product.cost %></td>
        <td><%= product.selling_price_1 %></td>
        <td><%= product.observations %></td>
        <td><%= product.provider %></td>
        <td><%= product.inventory %></td>
        <td><%= product.barcode %></td>
        <td><%= product.selling_price_2 %></td>
        <td><%= product.selling_price_3 %></td>
        <td><%= product.min_stock %></td>
        <td><%= product.max_stock %></td>
        <td><%= product.stock_purchase %></td>
        <td><%= product.factor_pcs_of_sales %></td>
        <td><%= product.ncm %></td>
        <td><%= product.brand %></td>
        <td><%= product.weight %></td>
        <td><%= product.size %></td>
        <td><%= product.inactive %></td>
        <td><%= product.kind %></td>
        <td><%= product.composition %></td>
        <td><%= product.feedstock %></td>
        <td><%= product.material_imprint %></td>
        <td><%= product.for_sale %></td>
        <td><%= product.coin %></td>
        <td><%= product.code %></td>
        <td><%= product.comments %></td>
        <td><%= product.provider %></td>
        <td><%= product.pip %></td>
        <td><%= product.gender %></td>
        <td><%= product.value %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>

